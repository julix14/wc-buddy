<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="62dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    tools:visibility="gone">

    <LinearLayout
        android:id="@+id/bottom_sheet_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="62dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/wc_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bottom_sheet_description"
            android:textSize="24sp" />

    </LinearLayout>

    <View
        android:id="@+id/wc_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/wc_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/placeholder" />

    <TextView
        android:id="@+id/wc_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/placeholder" />

    <TextView
        android:id="@+id/wc_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/placeholder" />

    <TextView
        android:id="@+id/wc_postal_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/placeholder" />

    <TextView
        android:id="@+id/wc_changing_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/placeholder" />

    <TextView
        android:id="@+id/wc_urinal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/placeholder" />

    <TextView
        android:id="@+id/wc_is_favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/placeholder" />

    <Button
        android:id="@+id/wc_toggle_favorite"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="@string/placeholder" />

</LinearLayout>